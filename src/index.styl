$width = 375
$root-font-size = 375 / 20

.sanTest
    width: 20rem

    #qrcodeTable
        display flex
        justify-content: center
        align-content: center
        width 100%
        height 10rem
    .top
        height 2rem
        background #0ff

    .main
        height calc(100vh - 4rem)
        background #00f

    .block
        border: 1px solid #000;
        padding: 100px 0;
        perspective: 800px;
        perspective-orign: 50% 50%;

    .dice
        width: 300px;
        height: 300px;
        margin: 20px auto;
        position: relative;
        transform-style: preserve-3d;
    
    .page
        width: 200px;
        height: 200px;
        background: rgba(0,0,0,0.3);
        position: absolute;
        font-size: 200px;
        color: #fff;
        line-height: 200px;
        text-align: center;
        border: 1px solid red;
    
    .page2
        transform: rotateY(-90deg);
        transform-origin: right;
    
    .page3
        transform: translateZ(-200px);
        transform-origin: right;
    
    .page4
        transform: rotateY(90deg);
        transform-origin: left;
    
    .page5
        transform: rotateX(-90deg);
        transform-origin: top;
    
    .page6
        transform: rotateX(90deg);
        transform-origin: bottom;       
    
    .begin
        animation: random-rotate 2s linear 0s infinite;
        transition: all 1s ease;

    .starclick
        width: 100px
        height: 40px
        background #ff0000
        margin-bottom 20px

    @keyframes random-rotate
        0%
            transform:rotateX(0deg) rotateY(0deg);
        
        // 50%
        //     transform:rotateX(0deg) rotateY(360deg);

        100%
            transform:rotateX(360deg) rotateY(360deg);

    @keyframes ball
        0%
            transform translateY(0)

        100%
            transform translateY(-150px)


    
    .wrapball
        width 100px

        .ball
            border-radius 100%
            left 0
            position absolute
            bottom 0
            right 0
            top 0
            margin auto
            animation ball 300ms cubic-bezier(0.165, 0.840, 0.440, 1.000) infinite alternate
            height 50px
            width 50px
            background linear-gradient(#e55, #b00)
            animation-delay -200ms
    .box
        display flex
    .box span
        display: block;
        width: 40px;
        height: 40px;
        border-radius: 20px;
        background: greenyellow;
        animation: center1 500ms cubic-bezier(.55, 0, .85, .36) forwards;

    .aaa2
        margin-left 90px
        display none!important

    .al
        animation: center2 500ms cubic-bezier(.55, 0, .85, .36) forwards;

    
    
    @keyframes center1
        0%{-webkit-transform:translate3d(0,0,0)}
        10%{-webkit-transform:translate3d(0,-60px,0)}
        20%{-webkit-transform:translate3d(10px,-120px,0)}
        30%{-webkit-transform:translate3d(20px,-140px,0)}
        40%{-webkit-transform:translate3d(30px,-140px,0)}
        50%{-webkit-transform:translate3d(40px,-140px,0)}
        60%{-webkit-transform:translate3d(50px,-130px,0)}
        70%{-webkit-transform:translate3d(60px,-120px,0)}
        80%{-webkit-transform:translate3d(70px,-100px,0)}
        90%{-webkit-transform:translate3d(80px,-60px,0)}
        100%{-webkit-transform:translate3d(90px,0,0)}

     @keyframes center2
        0%{-webkit-transform:translate3d(90px,0,0)}
        10%{-webkit-transform:translate3d(90px,-60px,0)}
        20%{-webkit-transform:translate3d(100px,-120px,0)}
        30%{-webkit-transform:translate3d(110px,-140px,0)}
        40%{-webkit-transform:translate3d(120px,-140px,0)}
        50%{-webkit-transform:translate3d(130px,-140px,0)}
        60%{-webkit-transform:translate3d(140px,-130px,0)}
        70%{-webkit-transform:translate3d(150px,-120px,0)}
        80%{-webkit-transform:translate3d(160px,-100px,0)}
        90%{-webkit-transform:translate3d(170px,-60px,0)}
        100%{-webkit-transform:translate3d(180px,0,0)}
    
     @keyframes center3
        0%{-webkit-transform:translate3d(180px,0,0)}
        10%{-webkit-transform:translate3d(180px,-60px,0)}
        20%{-webkit-transform:translate3d(190px,-120px,0)}
        30%{-webkit-transform:translate3d(200px,-140px,0)}
        40%{-webkit-transform:translate3d(210px,-140px,0)}
        50%{-webkit-transform:translate3d(220px,-140px,0)}
        60%{-webkit-transform:translate3d(230px,-130px,0)}
        70%{-webkit-transform:translate3d(240px,-120px,0)}
        80%{-webkit-transform:translate3d(250px,-100px,0)}
        90%{-webkit-transform:translate3d(260px,-60px,0)}
        100%{-webkit-transform:translate3d(270px,0,0)}
        
    

    


        
    